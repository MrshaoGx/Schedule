<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.schedule.shao.memday.Fragments.FragmentAdd">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/btn_isAlert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="是否提醒"
                android:layout_marginTop="10dp" />

            <ImageButton
                android:id="@+id/iv_loadimage"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/DatePick"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/btn_isAlert"
                android:background="@drawable/icon_recommend"
                android:gravity="start"
                android:layout_width="20dp" />


            <TextView
                android:id="@+id/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/iv_loadimage"
                android:layout_alignBottom="@+id/iv_loadimage"
                android:layout_toLeftOf="@+id/iv_loadimage"
                android:layout_toStartOf="@+id/iv_loadimage"
                android:text="|"
                android:textColor="#A8A8A8"
                android:textSize="23sp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/DatePick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/btn_isAlert"
                android:layout_alignBottom="@+id/btn_isAlert"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/line"
                android:layout_toStartOf="@+id/line"
                android:clickable="true"
                android:text="TextView"
                android:textSize="18sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/fragment_add_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/fragment_add_line1"
            android:background="#ccc">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"></LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/et_Content"
            android:layout_width="match_parent"
            android:ems="10"
            android:gravity="top"
            android:layout_weight="0.2"
            android:hint="请输入提醒内容"
            android:inputType="textMultiLine"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@color/white"
            android:id="@+id/imageView2" />

        <Button
            android:id="@+id/Save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.28"
            android:background="@color/colorPrimary"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="25sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.35"
            android:layout_height="match_parent">

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
